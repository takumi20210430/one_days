<div class="container">
  <h3>フォロー新着投稿(30件)</h3>
  <% if @articles.empty? %>
    <h1 class="not-user">まだ投稿がありません</h1>
  <% else %>
    <div class="scroll-list jscroll">
      <div class="row row-cols-1 row-cols-md-4 mx-auto">
        <% @articles.each.with_index(1) do |article, i| %>
          <div class="col mb-4">
            <div class="card">
              <div class="abridgement">
                タイトル<br /><%= link_to article.title,article_path(article.id) %>
              </div>
              <p><%= "#{article.article_comments.count} コメント" %></p>
              <%= link_to article_path(article.id) do %>
                <%= attachment_image_tag(article, :image1,fallback: "no_image.jpg",class: 'article-img' ) %><br />
                <div class="abridgement">
                  投稿者 <%= article.user.name %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
        <%= paginate @articles %>
      </div>
    </div>
  <% end %>
</div>
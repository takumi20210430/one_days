<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-4">
      <%= render 'user_base', user: @user %>
    </div>
    <div class="col-md-7 offset-md-1">
      <h2>Pet dogs</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>犬種</th>
            <th>名前</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @dogs.each do |dog| %>
            <tr>
              <td>
                <%= link_to dog_path(dog.id) do %>
                  <%= attachment_image_tag dog, :image1, :fill, 60, 60, fallback: "no_image.jpg", size:'80x80' %>
                <% end %>
              </td>
              <td>
                <%= dog.dog_type_id %>
              </td>
              <td>
                <%= link_to dog.name, dog_path(dog) %>
              </td>
            </tr>
         <% end %>
        </tbody>
      </table>
      <h3>投稿一覧</h3>
      <div class="scroll-list jscroll">
        <div class="row row-cols-1 row-cols-md-3">
          <% @articles.each do |article| %>
            <div class="col mb-4">
              <div class="card">
                <div class="abridgement">
                  <p>タイトル</br>
                    <%= link_to article.title,article_path(article.id) %>
                  </p>
                </div>

                <%= link_to article_path(article.id) do %>
                  <%= attachment_image_tag(article, :image1, :fill, 170, 170, fallback: "no_image.jpg",size:'195x188' ) %></br>
                <% end %>
              </div>
              <table>
                <div id="favorite_buttons_<%= article.id %>">
                  <%= render "favorites/favorite", article: article %>
                </div>
                コメント件数：<%= article.article_comments.count %>
              </table>
            </div>
          <% end %>
          <%= paginate @articles %>
        </div>
      </div>
    </div>
  </div>
</div>
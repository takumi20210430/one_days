<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user_info', user: @user %>
      <%= render 'dogs/dog.new', dog: @dog %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Pet dogs</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>犬種</th>
            <th>名前</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @dogs.each do |dog| %>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @user, :profile_image_url, :fill, 60, 60, fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td>
                <%= dog.dog_type %>
              </td>
              <td>
                <%= link_to dog.name, dog_path(dog) %>
              </td>
            </tr>
         <% end %>
        </tbody>
      </table>
    </div>
</div>
</div>
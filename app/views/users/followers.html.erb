<div class="container-xl-12">
  <div class="row">
    <div class="col-md-12">
      <h2>follower一覧</h2>
      <% if @followers.empty? %>
        <%= "ユーザーはいません" %>
      <% else %>
        <table class="table">
          <thead>
            <tr>
              <th>name</th>
              <th>dog数</th>
              <th>投稿数</th>
              <th>フォロワー数</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <% @followers.each do |follower| %>
              <tr>
                <td>
                  <%= link_to user_path(follower.id) do %>
                    <%= attachment_image_tag current_user, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
                    <%= user.follower.name %>
                  <% end %>
                </td>
                <td>
                 <%= follower.dogs.count %>
                </td>
                <td>
                  <%= follower.articles.count %>
                </td>
                <td>
                  <%= follower.followers.count %>
                </td>
                <td>
                  <%#= render "follow", user: user %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>follows</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>name</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @follows.each do |following| %>
            <tr>
              <td>
                <%= link_to user_path(following.id) do %>
                  <%= attachment_image_tag current_user, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
                  <% end %>
              </td>
              <td>
                <%= link_to user_path(following.id) do %>
                  <%= following.name %>
                <% end %>
              </td>
              <td>
               <% following.dogs.name %>
              </td>
              <td>
                <%#= render "follow", user: user %>
              </td>
            </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
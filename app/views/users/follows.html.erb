<div class="container-xl-12">
  <div class="row">
    <div class="col-md-12">
      <h2>follows一覧</h2>
      <% if @follows.empty? %>
        <%= "ユーザーはいません" %>
      <% else %>
        <div class="scroll-list jscroll">
          <% @follows.each do |following| %>
            <ul class="justify-content-around">
              <li>
                <%= link_to user_path(following.id) do %>
                  <%= attachment_image_tag following, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
                <% end %>
              </li>
              <li>
                名前：
                <%= link_to following.name, user_path(following.id) %>
              </li>
              <li>
                dog数：
                <%= following.dogs.count %>匹
              </li>
              <li>
                投稿数：
                <%= following.articles.count %>
              </li>
            </ul>
          <% end %>
          <%= paginate @following%>
        </div>
      <% end %>
    </div>
  </div>
</div>

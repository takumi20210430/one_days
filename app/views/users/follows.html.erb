<div class="container-xl-12">
  <div class="row">
    <div class="col-md-12">
      <h2>follows一覧</h2>
      <% if @follows.empty? %>
        <%= "ユーザーはいません" %>
      <% else %>
        <table class="table">
          <thead>
            <tr>
              <th>name</th>
              <th>dog数</th>
              <th>投稿数</th>
              <th>フォロワー数</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <% @follows.each do |following| %>
              <tr>
                <td>
                  <%= link_to user_path(following.id) do %>
                    <%= attachment_image_tag current_user, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
                    <%= following.name %>
                  <% end %>
                </td>
                <td>
                 <%= following.dogs.count %>
                </td>
                <td>
                  <%= following.articles.count %>
                </td>
                <td>
                  <%= following.followers.count %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
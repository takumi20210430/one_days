<% if current_user != user %>
  <% if user.followed_by?(current_user) %>
    <%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-info btn-sm btn-block mb-3 follow" %>
  <% else %>
    <%=link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-info btn-sm btn-block mb-3 follow" %>
  <% end %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-5 px-sm-0 mx-auto">
      <h1>Dog編集画面</h1>
      <%= form_with model:@dog, local: true do |f| %>
        <div cass="form">
          <div class="form-group">
              <%= f.attachment_field :image %>
          </div>
          <div class="form-group">
            <label for="dog name">名前</label>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <label for="dog age">年齢</label>
            <%= f.text_field :age %>
          </div>
          <div class="form-group">
            <label for="dog skill">特技</label>
            <%= f.text_field :skill %>
          </div>
          <div class="form-group">
            <label for="dog favorite">お気に入り</label>
            <%= f.text_field :favorite %>
          </div>
          <div class="form-group">
            <label for="dog introduction">紹介</label>
            <%= f.text_area :introduction %>
          </div>
          <div class="form-group">
            <br><%= f.submit '変更する' %></br>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
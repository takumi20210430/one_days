<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-5 px-sm-0 mx-auto">
      <h1>Dog編集画面</h1>
      <%= form_with model:@dog, local: true do |f| %>
        <div cass="form">
          <div class="form-group">
            <img id="preview_0" style="width:15%;">
            <%= f.attachment_field :image1 %>
            <script>
              $('#dog_image1').on('change', function (e) {
                var reader = new FileReader();
                reader.onload = function (e) {
                $("#preview_0").attr('src', e.target.result);
                }
                reader.readAsDataURL(e.target.files[0]);
              });
            </script>
          </div>
          <div class="form-group">
            <img id="preview_1" style="width:15%;">
            <%= f.attachment_field :image2 %>
            <script>
              $('#dog_image2').on('change', function (e) {
                var reader = new FileReader();
                reader.onload = function (e) {
                  $("#preview_1").attr('src', e.target.result);
                }
                reader.readAsDataURL(e.target.files[0]);
              });
            </script>
          </div>
          <div class="form-group">
            <img id="preview_2" style="width:15%;">
            <%= f.attachment_field :image3 %>
            <script>
              $('#dog_image3').on('change', function (e) {
                var reader = new FileReader();
                reader.onload = function (e) {
                  $("#preview_2").attr('src', e.target.result);
                }
                reader.readAsDataURL(e.target.files[0]);
              });
            </script>
          </div>
          <div class="form-group">
            <label for="dog name">名前</label>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <label for="dog age">年齢</label>
            <%= f.text_field :age %>
          </div>
          <div class="form-group">
            <label for="dog skill">特技</label>
            <%= f.text_field :skill %>
          </div>
          <div class="form-group">
            <label for="dog favorite">お気に入り</label>
            <%= f.text_field :favorite %>
          </div>
          <div class="form-group">
            <label for="dog introduction">紹介</label>
            <%= f.text_area :introduction %>
          </div>
          <div class="form-group">
            <br><%= f.submit '変更する' %></br>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
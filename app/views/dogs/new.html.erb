<h2 class="mt-3">愛犬の追加</h2>
<%= form_with model: @dog, local:true do |f| %>
  <div class="form-group">
    <label for="dog_name">Name</lebel>
    <br><%= f.text_field :name, class: "col-md-12" %></br>
  </div>
  <div class="form-group">
    <label for="dog_type">犬種</lebel>
    <br><%= f.collection_select :dog_type_id, @dog_types, :id, :type_name, {prompt: "選択してください"},class: "form-control dog_type" %></br>
  </div>
  <div class="form-group">
    <label for="dog_introduction">紹介</label>
    <br><%= f.text_area :introduction, class: "col-md-12"%></br>
  </div>
  <div class="form-group">
    <br><%= f.submit '犬を登録する' %></br>
  </div>
<% end %>
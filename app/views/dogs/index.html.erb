<div class="container-xl-12">
  <div class="row">
    <div class="col-md-12">
      <h2>犬一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>name</th>
            <th>犬種</th>
            <th>age</th>
            <th>飼い主</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @dogs.each do |dog| %>
            <tr>
              <td>
                <%= link_to dog_path(dog.id) do %>
                  <%= attachment_image_tag current_user, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
                 <%= dog.name %></br>
                <% end %>
              </td>
              <td><%= dog.dog_type_id %></td>
              <td><%= dog.age %>才</td>
              <td>
                <%= link_to dog.user.name, user_path(dog.user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
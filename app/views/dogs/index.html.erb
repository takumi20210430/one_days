<div class="container-xl-12">
  <div class="row">
    <div class="col-md-12">
      <h2>犬一覧</h2>
      <div class="scroll-list jscroll">
        <% @dogs.each do |dog| %>
          <ul class="justify-content-around">
            <li>
              <%= link_to dog_path(dog.id) do %>
                <%= attachment_image_tag dog, :image1, :fill, 60, 60, fallback: "no_image.jpg" %>
              <% end %>
            </li>
            <li>
              名前：
              <%= link_to dog.name, dog_path(dog.id) %>
            </li>
            <li>
              犬種：
              <%= dog.dog_type_id %>
            </li>
            <li>
              AGE：
              <%= dog.age %>才
            </li>
            <li>
              飼い主:
              <%= link_to user_path(dog.user) do %>
                <%= dog.user.name %>
                <%= attachment_image_tag dog.user, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
              <% end %>
            </li>
          </ul>
        <% end %>
        <%= paginate @dogs %>
      </div>
    </div>
  </div>
</div>

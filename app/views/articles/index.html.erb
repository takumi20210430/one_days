<div class="container">
  <h3>投稿一覧</h3>
  <div class="scroll-list jscroll">
    <div class="row row-cols-1 row-cols-md-4">
      <% @articles.each do |article| %>
        <div class="col mb-4">
          <div class="card">
            <div class="abridgement">
              タイトル</br> <%= link_to article.title,article_path(article.id) %>
            </div>
            <div id="favorite_buttons_<%= article.id %>">
              <%= render "favorites/favorite", article: article %>
            </div>
            <p><%= "#{article.article_comments.count} コメント" %></p>
            <%= link_to article_path(article.id) do %>
              <%= attachment_image_tag(article, :image1, :fill, 200, 150, fallback: "no_image.jpg",size:'200x150' ) %></br>
              <div class="abridgement">
                投稿者 <%= article.user.name %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <%= paginate @articles %>
    </div>
  </div>
</div>


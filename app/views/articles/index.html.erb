<div class="container py-5">
  <div class="row">
    <div class="col-9">
      <div class="item-index mb-5">
        <h3>投稿一覧</h3>
      </div>
      <div class="row" style="flex-wrap:wrap;">
        <% @articles.each do |article| %>
            <div class="col mx-3">
                <p>投稿者 <%= link_to article.user.name,user_path(article.user.id) %></p>
                <p>タイトル　<%= link_to article.title,article_path(article.id) %></p>
                <%= link_to article_path(article.id) do %>
                    <%= attachment_image_tag(article, :image1, :fill, 200, 150) %>
                <% end %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

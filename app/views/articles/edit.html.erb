<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-5 px-sm-0 mx-auto">
      <h1>記事編集</h1>
      <%= form_with model:@article, local: true do |f| %>
        <div cass="form">
          <div class="form-group">
            <label for="article title">タイトル</label>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <%= f.attachment_field :image1 %>
          </div>
          <div class="form-group">
            <%= f.attachment_field :image2 %>
          </div>
          <div class="form-group">
            <%= f.attachment_field :image3 %>
          </div>
          <div class="form-group">
            <%= f.attachment_field :image4 %>
          </div>
          <div class="form-group">
            <%= f.attachment_field :image5 %>
          </div>
          <div class="form-group">
            <label for="article body">投稿内容</label>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <br><%= f.submit '更新する' %></br>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
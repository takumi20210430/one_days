<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-5 px-sm-0 mx-auto">
      <h1>記事編集</h1>
      <%= form_with model:@article, local: true do |f| %>
        <div cass="form">
          <div class="form-group">
            <label for="article title">タイトル</label>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <img id="preview_0" style="width:15%;">
            <%= f.attachment_field :image1 %>
            <script>
              $('#article_image1').on('change', function (e) {
                var reader = new FileReader();
                reader.onload = function (e) {
                  $("#preview_0").attr('src', e.target.result);
                }
                reader.readAsDataURL(e.target.files[0]);
              });
            </script>
          </div>
          <div class="form-group">
            <img id="preview_1" style="width:15%;">

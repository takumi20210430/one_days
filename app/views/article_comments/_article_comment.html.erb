<% article_comments.each do |article_comment| %>
  <tr>
    <td>
      <%= link_to user_path(article_comment.user) do %>
        <%= image_tag('no_image.jpg') %></br>
        <%= link_to article_comment.user.name %>
      <% end %>
      <%= article_comment.created_at.strftime('%Y/%m/%d') %>
    </td>
    <td>
      <%= article_comment.comment %>
    </td>
    <td>
      <% if article_comment.user == current_user || current_user.admin %>
        <%= link_to "Destroy", article_article_comment_path(article_comment.article, article_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
      <% end %>
    </td>
  </tr>
<% end %>
